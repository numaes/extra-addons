<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_vehicle_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit.tls.toll</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <!-- SMART BUTTON -->
            <xpath expr="//sheet/div/button[@icon='fa-wrench']" position="after">
                <button name="return_action_to_open" type="object" context="{'xml_id':'tls_tollsync.tls_toll_action'}"
                        attrs="{'invisible': [('tolls_count','=',0)]}" class="oe_stat_button" icon="fa-road"
                        help="Show the road tolls for this vehicle">
                    <field name="tolls_count" widget="statinfo" string="Tolls"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>