<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tls_toll_view_form" model="ir.ui.view">
        <field name="name">tls.toll.form</field>
        <field name="model">tls.toll</field>
        <field name="arch" type="xml">
            <form string="Road Tolls">
                <sheet>
                    <group>
                        <group string="Toll Details">
                            <field name="entry_date"/>
                            <field name="entry_name"/>
                            <label for="entry_lat" string="" invisible="1"/>
                            <div class="row pr-4 oe_edit_only">
                                <label for="entry_lat" string="Lat" class="col-2 pr-2 m-0 text-right font-weight-bold"/>
                                <field name="entry_lat" class="col-4"/>
                                <label for="entry_lng" string="Lng" class="col-2 pr-2 m-0 text-right font-weight-bold"/>
                                <field name="entry_lng" class="col-4"/>
                            </div>
                            <field name="exit_name"/>
                            <label for="exit_lat" string="" invisible="1"/>
                            <div class="row pr-4 oe_edit_only">
                                <label for="exit_lat" string="Lat" class="col-2 pr-2 m-0 text-right font-weight-bold"/>
                                <field name="exit_lat" class="col-4"/>
                                <label for="exit_lng" string="Lng" class="col-2 pr-2 m-0 text-right font-weight-bold"/>
                                <field name="exit_lng" class="col-4"/>
                            </div>
                            <label for="distance"/>
                            <div class="o_row">
                                <field name="distance"/>
                                <field name="odometer_unit"/>
                            </div>
                            <field name="cost_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group class="m-0">
                            <group string="Vehicle Details" class="o_group_col_12">
                                <field name="vehicle_id"/>
                                <field name="purchaser_id"/>
                            </group>
                            <group string="Additional Details" class="o_group_col_12">
                                <field name="vendor_id"/>
                                <field name="inv_ref"/>
                                <field name="description" invisible="1"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Map" attrs="{'invisible': [('hide_route_widget','=',True)]}">
                            <widget name="tls_route"/>
                            <field name="route_image" invisible="1"/>
                            <field name="hide_route_widget" invisible="1"/>
                            <field name="use_booster_widget" invisible="1"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Write here any other information"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tls_toll_view_tree" model="ir.ui.view">
        <field name="name">tls.toll.tree</field>
        <field name="model">tls.toll</field>
        <field name="arch" type="xml">
            <tree string="Tolls" js_class="tls_toll_tree" decoration-bf="create_date &gt; current_date" decoration-muted="inv_ref">
                <field name="entry_date"/>
                <field name="vehicle_id"/>
                <field name="vendor_id"/>
                <field name="entry_name"/>
                <field name="exit_name"/>
                <field name="distance" sum="Distance"/>
                <field name="cost_amount" widget="monetary" sum="Cost"/>
                <field name="create_date" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="inv_ref" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="tls_toll_view_graph" model="ir.ui.view">
        <field name="name">tls.toll.graph</field>
        <field name="model">tls.toll</field>
        <field name="arch" type="xml">
            <graph string="Tolls Per Month" stacked="True">
                <field name="entry_date" interval="month" type="row"/>
                <field name="vehicle_id" type="col"/>
                <field name="cost_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="tls_toll_view_search" model="ir.ui.view">
        <field name="name">tls.toll.search</field>
        <field name="model">tls.toll</field>
        <field name="arch" type="xml">
            <search string="Road Tolls">
                <field name="entry_name" filter_domain="['|', ('entry_name','ilike',self), ('exit_name','ilike',self)]"/>
                <field name="vehicle_id"/>
                <filter string="Non-invoiced" name="non_invoiced" domain="[('inv_ref','=',False)]"/>
                <filter string="Have note" name="have_note" domain="[('notes','!=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Vendor" name="groupby_vendor" context="{'group_by': 'vendor_id'}"/>
                    <filter string="Vehicle" name="groupby_vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <separator/>
                    <filter string="Date" name="groupby_date" context="{'group_by': 'entry_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tls_toll_action" model="ir.actions.act_window">
        <field name="name">Road Tolls</field>
        <field name="res_model">tls.toll</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new road toll</p>
            <p>Here you can add toll road entries for all vehicles.</p>
        </field>
    </record>

    <menuitem action="tls_toll_action" parent="fleet.fleet_vehicles" id="tls_toll_menu" groups="fleet.fleet_group_user" sequence="64"/>
</odoo>