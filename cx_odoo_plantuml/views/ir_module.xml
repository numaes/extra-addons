<?xml version="1.0"?>
<odoo>

    <!--##########
        # Module #
        ##########-->

    <!--## Form ##-->
    <record id="cx_ir_module_form" model="ir.ui.view">
        <field name="name">cetmix.ir.module.form</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.module_form"/>
        <field name="arch" type="xml">
            <!-- Add button -->
            <xpath expr="//div[@class='oe_title mb32']/div" position="inside">
                <button type="object"
                        name="button_plantuml_export"
                        string="Export PlantUML"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <!--## Kanban ##-->
    <record id="cx_ir_module_kanban" model="ir.ui.view">
        <field name="name">cetmix.ir.module.kanban</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.module_view_kanban"/>
        <field name="arch" type="xml">
            <!-- Add button -->
            <xpath expr="//kanban/templates/t/div/div[@class='o_dropdown_kanban dropdown']/div[@class='dropdown-menu']" position="inside">
                <a name="button_plantuml_export"
                   type="object"
                   role="menuitem"
                   class="dropdown-item">PlantUML export</a>
            </xpath>
        </field>
    </record>

</odoo>
