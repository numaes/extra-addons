<odoo>
    <record id="eg_custom_dashboard_item_list_view" model="ir.ui.view">
        <field name="name">eg.custom.dashboard.item.list</field>
        <field name="model">eg.custom.dashboard.item</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="custom_dashboard_board_id"/>
                <field name="chart_type"/>
                <field name="ir_model_id"/>
            </list>
        </field>
    </record>

    <record id="eg_custom_dashboard_item_form_view" model="ir.ui.view">
        <field name="name">eg.custom.dashboard.item.form</field>
        <field name="model">eg.custom.dashboard.item</field>
        <field name="arch" type="xml">
            <form js_class="eg_custom_dashboard_item_form_view">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>

                    <div class="dashboard-item-box chart-box m-top">
                        <div class="eChart-box">
                            <div id="custom-chart-preview" style="width:1090px;height:400px" class="custom-preview"/>
                        </div>
                    </div>
                    <notebook>
                        <page string="Chart Data">
                            <group>
                                <group string="General">
                                    <field name="chart_data" invisible="1"/>
                                    <field name="chart_type" required="1"/>
                                    <field name="nightingale_chart" invisible="chart_type not in ['pie']"/>
                                    <field name="access_from_chart" invisible="chart_type not in ['pie']"/>
                                    <field name="simple_chart" invisible="chart_type not in ['pie']"/>
                                    <field name="ir_model_id" required="1"/>
                                    <field name="model_name" invisible="1"/>
                                    <field name="calculation_type" required="0"
                                           />
                                    <field name="label_model_field_id" required="is_group_by_data  == False and chart_type not in ['tiles','kpi']"
                                           invisible="is_group_by_data == True or chart_type in ['tiles','kpi']"/>
                                    <field name="measure_model_field_ids" widget="many2many_tags"
                                           required="calculation_type in ['sum']" options="{'no_create': True}"/>
                                    <field name="is_group_by_data"
                                           invisible= "chart_type in ['tiles','kpi']"/>
                                    <field name="group_by_measure_field_type" invisible="1"/>
                                    <field name="group_by_measure_field_id" invisible="is_group_by_data == False or chart_type in ['tiles','kpi']" required="is_group_by_data == True"/>
                                    <field name="group_by_filter" invisible="is_group_by_data == False or group_by_measure_field_type not in ['datetime','date'] or chart_type in ['tiles','kpi']" required="group_by_measure_field_type in ['datetime','date']"/>

                                    <field name="list_view_field_ids" invisible="chart_type not in ['list'] or is_group_by_data == True" required="chart_type in ['list'] and is_group_by_data == False"
                                           widget="many2many_tags"/>
                                    <field name="chart_data" invisible="1"/>
                                    <field name="custom_dashboard_board_id" required="1"/>
                                </group>
                                <group string="Date Filter">
                                    <field name="filter_domain" widget="domain"
                                           options="{'model': 'model_name', 'in_dialog': True}"
                                           context="{'current_id': id}"/>
                                    <field name="tile_record_amount" readonly="1" invisible="chart_type not in ['tiles','kpi']"/>
                                    <field name="date_record_filter_type"/>
                                    <field name="date_filter_field" required="date_record_filter_type not in  ['none']"/>
                                    <field name="start_date" invisible="date_record_filter_type not in ['custom_filter']" required="date_record_filter_type in  ['custom_filter']"/>
                                    <field name="end_date" invisible="date_record_filter_type not in ['custom_filter']" required="date_record_filter_type in ['custom_filter']"/>
                                </group>
                                <group string="Sort &amp; Limit ">
                                    <field name="record_limit"/>
                                    <field name="record_sort_field"/>
                                    <field name="record_sort" required="record_sort_field != False"/>
                                </group>
                            </group>
                        </page>
                        <page string="KPI Data" invisible="chart_type not in ['kpi']">
                            <group>
                                <group>
                                    <field name="kpi_model_id"/>
                                    <field name="kpi_model_name" invisible="1"/>
                                    <field name="kpi_record_amount" readonly="1" invisible="chart_type not in ['tiles','kpi']"/>
                                    <field name="kpi_calculation_type" required="kpi_model_id != False"/>
                                    <field name="kpi_measure_field_id" required="kpi_model_id != False and kpi_calculation_type == 'sum'" invisible="kpi_calculation_type not in ['sum']"/>
                                    <field name="kpi_data_calculation_type" widget="radio" required="kpi_model_id != False"/>
                                </group>
                                <group>
                                    <field name="kpi_filter_domain" widget="domain"
                                           options="{'model': 'kpi_model_name', 'in_dialog': True}"
                                           context="{'current_id': id}"/>
                                    <field name="kpi_date_filter_field_id"/>
                                    <field name="kpi_date_record_filter_type"/>
                                    <field name="kpi_start_date" invisible="kpi_date_record_filter_type not in ['custom_filter']" required="kpi_date_record_filter_type in ['custom_filter']"/>
                                    <field name="kpi_end_date" invisible="kpi_date_record_filter_type not in ['custom_filter']" required="kpi_date_record_filter_type in ['custom_filter']"/>
                                </group>
                            </group>
                        </page>
                        <page string="Theme" invisible="chart_type in ['list']">
                            <group>
                                <group string="General">
                                    <field name="tile_kpi_layout" invisible="chart_type not in ['kpi','tiles']"/>
                                    <field name="tile_kpi_theme" widget="color_picker" invisible="chart_type not in ['kpi','tiles']"/>

                                    <field name="name_align_position" invisible="chart_type in ['tiles','kpi']"/>
                                    <field name="chart_theme" invisible="chart_type in ['tiles','kpi']" required="chart_type not in ['tiles','kpi']"/>
                                    <field name="is_show_datalabels" invisible="chart_type not in ['line','bar','column','area','treemap','radar']"/>
                                    <field name="is_check_show_legend" invisible="1"/>
                                    <field name="is_show_legend" invisible="is_check_show_legend == False"/>
                                    <field name="legend_position" invisible="is_show_legend == False or is_check_show_legend == False" required="is_show_legend == True"/>
                                    <field name="legend_horizontal_align" invisible="is_show_legend == False or is_check_show_legend == False" required="is_show_legend == True"/>
                                    <field name="is_treemap_distributed" invisible="chart_type not in ['treemap']"/>
                                </group>
                                <group string="Fill">
                                    <field name="chart_background_color" widget="color"/>
                                    <field name="icon_bgcolor" widget="color" invisible="chart_type not in ['kpi','tiles']"/>
                                    <field name="icon_color" widget="color" invisible="chart_type not in ['kpi','tiles']"/>
                                    <field name="tile_image_type" invisible="chart_type not in ['tiles','kpi']"/>
                                    <field name="tile_icon" widget="dashboard_icon_picker" invisible="tile_image_type not in ['default_icons'] or chart_type not in ['tiles','kpi']"/>
                                    <field name="tile_unit" invisible="chart_type not in ['tiles','kpi']"/>
                                    <field name="tile_image_selection" widget="image" class="oe_avatar" invisible="chart_type not in ['tiles','kpi'] or tile_image_type not in ['custom_icon']"/>
                                </group>
                                <group string="Animation" invisible="chart_type in ['tiles','kpi']">
                                    <field name="is_enable_animation"/>
                                    <field name="animation_easing_type" invisible="is_enable_animation == False"/>
                                    <field name="animation_speed" invisible="is_enable_animation == False"/>
                                    <field name="is_enable_animation_gradually" invisible="is_enable_animation == False"/>
                                    <field name="animation_gradually_delay" invisible="is_enable_animation_gradually == False"/>
                                </group>
                                <group string="Grid" invisible="chart_type in ['tiles','treemap','pie','donut', 'kpi']">
                                    <field name="is_show_grid"/>
                                    <field name="grid_bg_color" widget="color" invisible="is_show_grid == False"/>
                                    <field name="grid_border_width" invisible="is_show_grid == False"/>
                                    <field name="grid_shadow_color" widget="color" invisible="is_show_grid == False"/>
                                    <field name="grid_shadow_blur" invisible="is_show_grid == False"/>
                                    <field name="grid_color" widget="color" invisible="is_show_grid == False"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eg_custom_dashboard_item_search_view" model="ir.ui.view">
        <field name="name">eg.custom.dashboard.item.search</field>
        <field name="model">eg.custom.dashboard.item</field>
        <field name="arch" type="xml">
            <search>
                <group string="Group By">
                    <filter name="group_by_custom_dashboard_board_id" string="Dashboard Template"
                            context="{'group_by': 'custom_dashboard_board_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_eg_custom_dashboard_item">
        <field name="name">Dashboard Items</field>
        <field name="res_model">eg.custom.dashboard.item</field>
        <field name="context">{
            'search_default_group_by_custom_dashboard_board_id': 1
            }
        </field>
        <field name="view_mode">search,list,form</field>
    </record>

    <menuitem id="main_menu_custom_dashboard" name="Smart Dashboard"/>
    <menuitem id="sub_menu_custom_dashboard" parent="main_menu_custom_dashboard"
              action="action_eg_custom_dashboard_item" name="Dashboard Items" sequence="2"/>
</odoo>
